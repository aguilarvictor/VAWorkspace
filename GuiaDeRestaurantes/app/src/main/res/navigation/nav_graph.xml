<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/StyleListFragment">

    <fragment
        android:id="@+id/StyleListFragment"
        android:name="com.vaworks.querico.StyleListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_style_list">
        <action
            android:id="@+id/action_StyleListFragment_to_RestaurantNameListFragment"
            app:destination="@id/RestaurantNameListFragment" />
    </fragment>
    <fragment
        android:id="@+id/RestaurantNameListFragment"
        android:name="com.vaworks.querico.RestaurantNameListFragment"
        android:label="@string/word_list_fragment_label"
        tools:layout="@layout/fragment_restaurantname_list">
        <argument
            android:name="letter"
            app:argType="string" />
    </fragment>
</navigation>